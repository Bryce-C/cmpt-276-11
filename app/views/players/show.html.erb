<h1> <%= @player.DISPLAY_FIRST_LAST %> </h1>
<ul class="list-inline" align = "center">
  <li class="list-inline-item"><strong>Height, Weight:</strong> <%= @player.PLAYER_HEIGHT %>, <%= @player.PLAYER_WEIGHT %></li>
  <li class="list-inline-item"><strong>Team:</strong> <%= @player.TEAM_CITY + " " + @player.TEAM_NAME %></li>
  <li class="list-inline-item"><strong>College:</strong> <%= @player.COLLEGE %></li>
</ul>

<div class="table-responsive">
<table class="table table-hover table-condensed col-md-3">
    <thead>
        <tr>
            <th>Season</th>
            <th>Team</th>
            <th>Age</th>
            <th>GP</th>
            <th>MIN</th>
            <th>FG%</th>
            <th>FG3%</th>
            <th>FT%</th>
            <th>PTS</th>
            <th>REB</th>
            <th>AST</th>
            <th>STL</th>
            <th>BLK</th>
            <th>TOV</th>
        </tr>
    </thead>
    <tbody>
        <% @stats.reverse.each do |stat| %>
              <tr>
                <td> <%= stat[1] %></td>
                <td> <%= stat[4] %> </td>
                <td> <%= stat[5].to_i %> </td>
                <td> <%= stat[6] %></td>
                <td> <%= stat[8] %> </td>
                <td> <%= stat[11].round(2) %> </td>
                <td> <%= stat[14].round(2) %> </td>
                <td> <%= stat[17].round(2) %> </td>
                <td> <%= stat[26] %> </td>
                <td> <%= stat[20] %> </td>
                <td> <%= stat[21] %> </td>
                <td> <%= stat[22] %> </td>
                <td> <%= stat[23] %> </td>
                <td> <%= stat[24] %> </td>
              </tr>
          <% end %>
    </tbody>
</table>
</div>
